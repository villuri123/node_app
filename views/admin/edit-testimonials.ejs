<script src="/static/js/edit-testimonials.js"></script>
<script src="/static/vendor/tinymce/tinymce.min.js" ></script>
<% if (token.role===3) { %>
    <a href="/admin/testimonials"  class="nav-link text-decoration-none text-dark fs-4 ms-4">
        <img src="/static/img/left-arrow.png" class="me-2"  height="20px" width="20px">Edit Testimonial</a>
    <%} else { %>
        <a href="/admin/schools"  class="nav-link text-decoration-none text-dark fs-4 ms-4">
            <img src="/static/img/left-arrow.png" class="me-2"  height="20px" width="20px">Edit Testimonial</a>
    <% } %>
<div class="container-fluid ms-3 mt-2">
            <div class="col-md-6">
                <label for="name" class="col-form-label">Name</label>
                <input type="text" class="form-control" id="name" value="<%= testimonialsList?testimonialsList.name:'' %>" >
            </div>
        <div class="mt-3 col-md-6">
            <label for="testimonials_profile" class="col-form-label">Upload Image</label>
            <div class="border upload-box ">
                <div class="raleway-regular upload-imgbox img" id="testimonials_profile_preview"
                    style=" justify-content:center;">
                    <img src="/<%= testimonialsList?testimonialsList.profile:''; %>" class="img-fluid" width="200px" height="200">
                </div>
                <div> <input type="file" class="form-control" id="testimonials_profile">
                    <div class="text-center click-image-upload">
                        <label for="testimonials_profile" class="col-form-label cursor-pointer"
                            style=" justify-content:center;">
                            <img src="/static/img/upload.jpg" class="d-block mx-auto img-fluid" height="50px" width="50px"><b>Click To Upload Image</b>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 col-md-6">
            <label for="designation" class="col-form-label">Designation</label>
            <input type="text" class="form-control" id="designation" value="<%=testimonialsList?testimonialsList.designation:'' %>" >
        </div>
        <div class="mt-3 col-md-6">
            <label for="testimonials_description" class="col-form-label">Description</label>
            <textarea class="tinymce" id="testimonials_description" rows="10"><%= testimonialsList?testimonialsList.description:'' %></textarea>
        </div>
    <div class="w-50 d-flex justify-content-end mt-2 ">
        <button type="submit" id="edit_testimonials"  data-id="<%=testimonialsList.id; %>" class="btn btn_bg_color text-white submit-button">Update</button>
        <button type="submit" class="btn btn-success text-white waiting-button d-none">Please Wait</button>
    </div>
</div>