<script src="/static/js/gallery.js"></script>
<div class="w-100 container-fluid">
  <div class="w-100 d-flex justify-content-end">
    <button type="button" class="btn btn_bg_color text-white">
      <a href="/admin/add-gallery" class="nav-link">
        <span class="sidebar-text">Gallery</span>
      </a>
    </button>
  </div>
  
    <div class="row ms-5 container">
      <% for (let i=0; i < galleryList.length; i++) { %>
        <div class="col-md-3 mt-5 row container position-relative">
          <img src="/<%= galleryList[i].image; %>" class="img-fluid " width="300px" height="300">
            <span type="button" data-id="<%=galleryList[i].id; %>" class="btn-close btn-close-white delete_image close-icon m-3 mt-0 " data-bs-dismiss="modal" data-bs-target="#delete-image" aria-label="Close"></span>

      </div>
        <% } %>
    </div>

  <div class="modal fade" id="delete-image" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Image</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure,You want to delete this image
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success" id="delete_image">Ok</button>
        </div>
      </div>
    </div>
  </div>
</div>